\name{coo.perim}
\alias{coo.perim}
\title{Calculates the perimeter}
\usage{
coo.perim(coo)
}
\arguments{
  \item{coo}{a \code{matrix} of \eqn{(x; y)} coordinates.}
}
\value{
\code{numeric}, the perimeter.
}
\description{
Calculates the perimeter
}
\examples{
data(bot)
coo.perim(bot[1])
hist(sapply(bot$coo, coo.perim), breaks=10)
}
\keyword{coo_descriptors}

